pipeline {
    agent any
    tools {
        nodejs "NodeJS-20.19.0"
    }
    environment {
        NODE_VERSION = '20.19.0'  // Set Node.js version (adjust as needed)
        
    }
   

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/DevKrishna009/Angular-sakai-v19.git'
            }
        }

        stage('Setup Node.js') {
            steps {
                script {
                    def nodeHome = tool name: "NodeJS-${NODE_VERSION}", type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
                    env.PATH = "${nodeHome}/bin:${env.PATH}"
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'  // Use 'sh' for Linux, replace with 'bat' for Windows
            }
        }

       stage('Build Angular Project') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Deploy to IIS') {
            steps {
                script {
                    def deployCmd = """
                        xcopy /E /I /Y "C:/data/jenkins_home/workspace/Angular-sakai-v19/dist/sakai-ng/*" "C:/inetpub/wwwroot/Angular/"

                    """
                    bat deployCmd  // Use 'sh' instead of 'bat' if using Linux
                }
            }
        }
    }

    post {
        success {
            echo "Deployment successful!"
        }
        failure {
            echo "Deployment failed!"
        }
    }
}
